// Programa para calcular a quantidade de litros de combustível gastos em uma viagem

algoritmo "CalculoLitros"
    // Declaração das variáveis
    inteiro tempo
    inteiro velocidade
    real distancia
    real litros

inicio
    // Leitura do tempo e da velocidade
    escreva("Digite o tempo gasto na viagem (em horas): ")
    leia(tempo)
    escreva("Digite a velocidade média durante a viagem (em km/h): ")
    leia(velocidade)

    // Cálculo da distância percorrida
    distancia := tempo * velocidade

    // Cálculo da quantidade de litros ⬤